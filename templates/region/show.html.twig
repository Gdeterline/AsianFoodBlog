{% extends 'base.html.twig' %}

{% block title %}Region Details{% endblock %}

{% block body %}
    <h1>Region Details</h1>
    <p>Description: {{ region.description }}</p>

    <h2>Public Meals</h2>
    <ul>
        {% for publicMeal in region.getRelationObject() %}
            <li>
                {{ publicMeal.Name }}
                <a href="{{ path('app_region_meal_show', {'regionId': region.id, 'mealId': publicMeal.id}) }}">View Details</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}