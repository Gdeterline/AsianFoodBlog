{% extends 'base.html.twig' %}

{% block title %}Edit Region{% endblock %}

{% block body %}
    <h1>Edit Region</h1>

    {{ include('region/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_region_index') }}">back to list</a>

    {{ include('region/_delete_form.html.twig') }}

    {# Afficher les repas associés à la région #}
    <h2>Meals in this Region</h2>
    <ul>
        {% for meal in region.getRelationObject() %}
            <li>{{ meal.getName() }}</li>
        {% endfor %}
    </ul>
{% endblock %}
